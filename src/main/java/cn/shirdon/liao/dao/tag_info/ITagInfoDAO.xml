<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="cn.shirdon.liao.dao.tag_info.ITagInfoDAO">
	
	<!-- 建立sql查询结果幻灯片数据与实体属性的映射关系 -->
	<resultMap id="TagInfoMap" type="cn.shirdon.liao.view.TagInfo">
		<result column="id" property="id" />
		<result column="name" property="name" />
	</resultMap>
	
	<!-- 根据标签名称数组，查询对应的id集合，并按从小到大排序 -->
	<select id="listIdByNameArr" resultType="String">
		SELECT
			id
		FROM
			tag_info
		WHERE
			name IN
		<foreach collection="nameArr" index="index" item="item" open="(" separator="," close=")">
			#{item}
		</foreach>
		ORDER BY id
	</select>
	
	<!-- 根据主键数组，查询名称集合 -->
	<select id="listNameByIdArr" resultType="String">
		SELECT
			name
		FROM
			tag_info
		WHERE
			id IN
		<foreach collection="idArr" index="index" item="item" open="(" separator="," close=")">
			#{item}
		</foreach>
		ORDER BY id
	</select>
	
	<!-- 根据标签中文名称，查询标签是否已存在 -->
	<select id="countByName" resultType="int">
		SELECT
			COUNT(*)
		FROM
			tag_info
		WHERE
			name = #{name}
	</select>
	
	<!-- 插入新标签 -->
	<insert id="insert">
		INSERT INTO tag_info
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="name!=null and name!=''">name,</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="name!=null and name!=''">#{name},</if>
		</trim>
	</insert>
</mapper>
